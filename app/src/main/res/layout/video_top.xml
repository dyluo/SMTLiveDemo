<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="57dp"
    android:background="@mipmap/bg_video_top"
    android:id="@+id/toolbar"
    android:paddingLeft="@dimen/padding15"
    android:paddingRight="@dimen/padding15"
    android:paddingTop="31dp" >
    <ImageButton
        android:id="@+id/iv_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_back_selector"/>

    <View
        android:layout_marginLeft="7dp"
        android:id="@+id/iv_div"
        android:layout_width="0.5dp"
        android:layout_height="20dp"
        android:background="@color/colorText_abb2c8"
        android:layout_toRightOf="@+id/iv_arrow_left"/>

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_size18"
        android:layout_toRightOf="@+id/iv_div"/>

    <LinearLayout
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视角"
            android:textColor="@color/colorText_abb2c8"
            android:textSize="@dimen/txt_size15"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:drawableRight="@mipmap/ic_pull_down"
            android:drawablePadding="4dp"/>
        <View
            android:id="@+id/iv_div2"
            android:layout_width="0.5dp"
            android:layout_height="20dp"
            android:background="@color/colorText_abb2c8"/>

        <TextView
            android:id="@+id/tv_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="画质"
            android:textColor="@color/colorText_abb2c8"
            android:textSize="@dimen/txt_size15"
            android:paddingLeft="8dp"
            android:layout_marginRight="@dimen/padding27"
            android:drawableRight="@mipmap/ic_pull_down"
            android:drawablePadding="4dp"/>

        <ImageButton
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding27"
            android:background="@drawable/btn_set_selector" />

        <ImageButton
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding27"
            android:background="@drawable/btn_share_selector"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/full"
            android:background="@drawable/btn_full_selector" />
    </LinearLayout>


</RelativeLayout>